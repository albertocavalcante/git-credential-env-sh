# Shell wrappers for dev tools (via tools.go.mod)
golangci-lint() {
  go tool -modfile=tools/lint/go.mod golangci-lint "$@"
}
export -f golangci-lint

gotestsum() {
  go tool -modfile=tools.go.mod gotestsum "$@"
}
export -f gotestsum

# Install git hooks on direnv load
if command -v lefthook &> /dev/null; then
  lefthook install 2>/dev/null
fi
